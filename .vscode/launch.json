{
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch index.html in Chrome",
      "file": "${workspaceFolder}/${input:htmlFile}"
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "htmlFile",
      "description": "Enter the path to your HTML file (e.g., index.html)"
    }
  ]
}